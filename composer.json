{
    "name": "hiraeth/dbal",
    "description": "Database abstraction via Doctrine for the Hiraeth Nano Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
    {
            "name":  "Matthew J. Sahagian",
            "email": "matthew.sahagian@gmail.com",
            "role":  "Lead Architect / Developer"
        }
    ],
    "require": {
        "ext-pdo_sqlite": "*",
    	"hiraeth/app": "^3.0",
        "doctrine/dbal": "^3.0",
        "doctrine/migrations": "^3.0",
        "doctrine/persistence": "^3.0",
        "ramsey/uuid-doctrine": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0",
        "hiraeth/console": "^3.0",
        "hiraeth/app": "^3.0",
	    "psy/psysh": "^0.11"
    },
    "autoload": {
        "classmap": [
            "src"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "test/src"
        ]
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "database": "",
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "imarc/opus": true
        }
    }
}
